{
  "name": "android-sensitive-api-scanner",
  "displayName": "Android Sensitive API Scanner",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "android-sensitive-api-scanner.openAPK",
        "title": "Android Sensitive API Scanner: Open an APK"
      }
    ],
    "configuration": {
      "title": "Android Sensitive API Scanner",
      "properties": {
        "jarPath": {
          "markdownDescription": "Put the absolute path of **android-sensitive-api-scanner.jar** file here.",
          "type": "string",
          "default": ""
        },
        "sensitiveAPIs": {
          "description": "Put the sensitive api which you want to scan here.",
          "type": "array",
          "default": [
            {
              "owner": "android.telephony.TelephonyManager",
              "name": "getImei",
              "descriptor": "()Ljava/lang/String;"
            },
            {
              "owner": "android.telephony.TelephonyManager",
              "name": "getImei",
              "descriptor": "(I)Ljava/lang/String;"
            },
            {
              "owner": "android.telephony.TelephonyManager",
              "name": "getDeviceId",
              "descriptor": "()Ljava/lang/String;"
            },
            {
              "owner": "android.telephony.TelephonyManager",
              "name": "getDeviceId",
              "descriptor": "(I)Ljava/lang/String;"
            },
            {
              "owner": "android.telephony.TelephonyManager",
              "name": "getMeid",
              "descriptor": "()Ljava/lang/String;"
            },
            {
              "owner": "android.telephony.TelephonyManager",
              "name": "getMeid",
              "descriptor": "(I)Ljava/lang/String;"
            },
            {
              "owner": "android.os.Build",
              "name": "BOARD",
              "descriptor": "Ljava/lang/String;"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}